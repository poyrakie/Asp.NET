@model AccountSavedCoursesViewModel

<section id="account-saved-courses">
    <div class="container">

        <aside>
            <div class="profile-info">
                @if (Model.BasicInfo.ProfileImage != null)
                {
                    <img src="@Model.BasicInfo.ProfileImage" alt="@($"{Model.BasicInfo.FirstName} {Model.BasicInfo.LastName}")" />
                }
                else
                {
                    <img src="/images/cat.jpg" alt="Cat" />
                }
                <h5>@($"{Model.BasicInfo.FirstName} {Model.BasicInfo.LastName}")</h5>
                <p>@Model.BasicInfo.Email</p>
            </div>

            <nav>
                <a class="btn-transparent" asp-controller="Account" asp-action="Details"><i class="fa-regular fa-gear"></i>Account Details</a>
                <a class="btn-transparent" asp-controller="Account" asp-action="Security"><i class="fa-regular fa-lock"></i>Security</a>
                <a class="btn-theme-s" asp-controller="Account" asp-action="SavedCourses"><i class="fa-light fa-bookmark"></i>Saved Courses</a>
                <a class="btn-transparent" asp-controller="Account" asp-action="SignOut"><i class="fa-sharp fa-regular fa-arrow-right-from-bracket"></i>Sign Out</a>
            </nav>
        </aside>
        <div class="saved-items">

            <div class="title-box">
                <h2>Saved items</h2>
                <a asp-controller="Account" asp-action="BigBertha" class="btn-red-transparent"><i class="fa-regular fa-trash"></i>Delete all</a>
            </div>
            <p>@Model.DisplayMessage</p>
            <div class="content">
            @foreach (var item in Model.List)
            {
                @if (Model.SavedList.Any(x => x.CourseId == item.Id)){
                    var decimalProcent = item.LikesInProcent;
                    var showProcent = Math.Floor(decimalProcent);

                    var decimalLikes = item.LikesInNumbers;
                    var showLikes = Math.Floor(decimalLikes / 100) / 10;

                    <div class="course-box">
                        <div class="image-box">
                            @if (item.IsBestSeller)
                            {
                                <div class="best-seller">Best Seller</div>
                            }
                            <img src="/@item.ImageName" alt="">
                            <a asp-controller="Account" asp-action="Bookmark" asp-route-id="@item.Id" class="bookmark">
                                <i class="fa-sharp fa-solid fa-bookmark saved"></i>
                            </a>
                        </div>
                        <a asp-controller="Courses" asp-action="SingleCourse" asp-route-id="@item.Id" class="course-text-box">
                            <h5>@item.Title</h5>
                            <p class>By @item.Author</p>
                            @if (item.DiscountPrice == 0)
                            {
                                <p class="price">$@item.OriginalPrice</p>
                            }
                            else
                            {
                                <div class="discount-price-box">
                                    <p class="discount-price">$@item.DiscountPrice</p>
                                    <p class="original-price">$@item.OriginalPrice</p>
                                </div>
                            }
                            <hr />
                            <div class="time-rating">
                                <p><i class="fa-light fa-clock"></i>@item.Hours hours</p>
                                <p><i class="fa-light fa-thumbs-up"></i>(@showProcent)% ((@showLikes)k)</p>
                            </div>
                        </a>
                    </div>
                }
            }
            </div>
        </div>



    </div>
</section>