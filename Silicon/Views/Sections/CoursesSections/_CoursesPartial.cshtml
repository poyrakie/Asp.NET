@model CoursesViewModel

<main>

    <section class="courses">
        <div class="container">
            <div class="link-box">
                <a asp-controller="Home" asp-action="Index"><i class="fa-thin fa-house"></i>Home</a>
                <p class="link-box-arrows"><i class="fa-solid fa-chevrons-right"></i></p>
                <p>Courses</p>
            </div>
            <div class="title-box">
                <h1>
                    Courses
                </h1>
                <div class="filter-box">
                    <select name="" id="categories">
                        <option value="All categories">All categories</option>
                    </select>
                    <div class="input-box">
                        <input type="text" placeholder="Search courses">
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </div>

                </div>
            </div>
            <div class="content">
                @foreach(var item in Model.List)
                {
                    
                    var decimalProcent = item.LikesInProcent;
                    var showProcent = Math.Floor(decimalProcent);

                    var decimalLikes = item.LikesInNumbers;
                    var showLikes = Math.Floor(decimalLikes / 100)/10;
                    

                    <div class="content-box">
                        <a asp-controller="Courses" asp-action="SingleCourse">
                            <div class="img-box">
                                <img src="@item.ImageName" alt=$"{@item.Title} image">
                                @if (item.IsBestSeller)
                                {
                                    <div class="best-seller">Best Seller</div>
                                }
                            </div>
                            <div class="content-text-box">
                                <h5>@item.Title</h5>
                                <p class="author">By @item.Author</p>
                                @if (item.DiscountPrice == 0)
                                {
                                    <p class="price">$@item.OriginalPrice</p>
                                }
                                else
                                {
                                    <div class="discount-price-box">
                                        <p class="discount-price">$@item.DiscountPrice</p>
                                        <p class="original-price">$@item.OriginalPrice</p>
                                    </div>
                                }
                                <hr>
                                <div class="time-raiting">
                                    <p><i class="fa-light fa-clock"></i>@item.Hours hours</p>
                                    <p><i class="fa-light fa-thumbs-up"></i>@showProcent% (@showLikes+K)</p>

                                </div>
                            </div>

                        </a>
                        <a asp-controller="Courses" asp-action="Bookmark" class="bookmark">
                            <i class="fa-light fa-bookmark"></i>
                        </a>
                    </div>
                }

                <div class="button-box">
                </div>
            </div>
            <div class="work-with-us">
                <div class="work-with-us-content">
                    <p>
                        Ready to get started?
                    </p>
                    <h1>
                        Take Your <span class="theme-color">Skills</span> to the Next Level
                    </h1>
                    <button class="btn-theme">Work with us</button>
                </div>
                <img src="~/images/courses-lady.svg" alt="large legged lady">
            </div>
        </div>
    </section>

</main>